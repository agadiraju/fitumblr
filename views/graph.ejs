<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Your Weekly Stats</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
</head>
<body>
  <canvas id="myCanvas" width="500" height="400" style="margin: 0px auto; display: block;"></canvas>
  <script>


	  var weeklySummary = JSON.parse('<%-JSON.stringify(weeklySummary)%>');




	  function wrapText(context, text, x, y, maxWidth, lineHeight) {
	    var words = text.split(' ');
	    var line = '';

	    for(var n = 0; n < words.length; n++) {
	      var testLine = line + words[n] + ' ';
	      var metrics = context.measureText(testLine);
	      var testWidth = metrics.width;
	      if (testWidth > maxWidth && n > 0) {
	        context.fillText(line, x, y);
	        line = words[n] + ' ';
	        y += lineHeight;
	      }
	      else {
	        line = testLine;
	      }
	    }
	    context.fillText(line, x, y);
	  }
    var canvas = document.getElementById('myCanvas');
    var context = canvas.getContext('2d');
    context.rect(0, 0, canvas.width, canvas.height);

    // // add linear gradient
    // var grd = context.createLinearGradient(500, 500, 50, canvas.height);
    // // light blue
    // grd.addColorStop(0, '#fff');   
    // // dark blue
    // grd.addColorStop(1, '#004CB3');
    context.fillStyle = "#3dcfff";
		context.fillRect(0, 0, 500, 200);
    context.fillStyle = "#191919";
		context.fillRect(0, 200, 500, 200);

		context.fillStyle="#fff";
		context.font="22px HelveticaNeue-Light";
		context.textBaseline="top";
		wrapText(context, 
			"Abhishek walked " + weeklySummary['activities-steps'] + " steps while burning " + weeklySummary['activities-calories'] + " calories, that's " + weeklySummary['activities-distance'] + " miles. He stayed sedentary for " + weeklySummary['minutesSedentary'] + " minutes.", 
			40, 40, 420, 28);
		wrapText(context, 
			"His quality of sleep was " + weeklySummary['sleep-efficiency'] + "%, he awoke only " + weeklySummary['sleep-awakeningsCount'] + " times.", 
			40, 240, 420, 28);



		drawing = new Image();
		drawing.src = "data:image/png;base64,";
		context.drawImage(drawing,391,361);
</script>
</body>
